/* TOOLTIP-VALIDATION */

.tooltip-validation {
    background : #aa0606;
    color : #fff;
    position : absolute;
    top : -1px;
    right : 0;
    font-size : 10px;
    padding : 3px 5px;
    border-radius : 3px;
    font-weight : bold;
}


.tooltip-validation:after {
    content : " ";
    position : absolute;
    bottom : -5px;
    right : 15px;
    width : 0px;
    height : 0px;
    border-style : solid;
    border-width : 5px 4px 0 4px;
    border-color : #aa0606 transparent transparent transparent;
    z-index : 2;
}

.tooltip-validation.select-tooltip{
    right : -5px !important;
}

input.ng-invalid, textarea.ng-invalid, select.ng-invalid {
    border-color : #e9322d;
}

.dialog-delete .modal-header{
    background-color: #DA4F49;
    background-image: linear-gradient(to bottom, #EE5F5B, #BD362F);
    background-repeat: repeat-x;
    border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
    color: #FFFFFF;
    text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
}

.gridFooterDiv {
    background-color: #EDEDED;
    border: 1px solid rgb(212,212,212);
    text-align: center;
    height: 76px;
}

.cell-centered {
    padding-left: 5px;
    text-align: center;
    padding-top: 2px;
}

/* CSS geral - Modulo */
hr.line-separetor { border: 1px solid #d9d9d9; width: 100%}
#page-wrapper { padding: 10px 0; }
#page-wrapper .header-module { border-bottom: 1px solid #d9d9d9; }
#page-wrapper .header-module .header-space { padding: 10px 40px;}
#page-wrapper .header-module .title-module { font-weight: bold; float: left; position: relative; top: 9px;  }
#page-wrapper .header-module .buttons-module { position: relative; left: 15px; }
#page-wrapper .content-module { padding: 10px 40px; }
#page-wrapper .content-module .form-group ul { padding: 0 }
#page-wrapper .content-module .form-group ul li { display: inline }

@media (max-width: 767px) {
    #page-wrapper .header-module .buttons-module { position: relative; left: 15px; }
    #page-wrapper .row div {display: block; clear: both; width: 100%; margin: 5px 0}
    #page-wrapper .row  select,#page-wrapper .row  input {width: inherit!important}
}

