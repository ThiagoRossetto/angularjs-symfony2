/* Estilização do menu e do header */
.navbar-inverse .navbar-nav>.open>a, .navbar-inverse .navbar-nav>.open>a:hover, .navbar-inverse .navbar-nav>.open>a:focus { background: #fff; color: #262626 }
.navbar-inverse .navbar-nav>li>a:hover, .navbar-inverse .navbar-nav>li>a:focus  { background: #f0f0f0; color: #999}
#sidebar { padding-left: 0;  height: 100%; background: #f0f0f0; border-right: 1px solid #d9d9d9 }
#sidebar li { border-bottom: 1px solid #d9d9d9; border-top: #d9d9d9 }
#sidebar .active a { background: #fff; color: #000000; box-shadow: none; border-left: 6px solid #06963b }
#sidebar.navbar-nav>li>a:hover { background: #fff; color: #000; border-left: 6px solid #06963b}
#sidebar.side-nav{ top: 60px }
#sidebar.side-nav>li.dropdown>ul.dropdown-menu  { background: #F8F8F8 }
.header-style .icon-notification-mobile { float: right; display: none }
.header-style { background: #fff; border-bottom: 1px solid #d9d9d9; }
.header-style .title { margin: 18px 0 0 20px; float: left; }
.header-style .title-mobile { display: none }
.header-style .logo { margin: 12px; float: left; display: block}
.header-style .logo-mobile { display: none }
.header-style.navbar-nav>li>a:hover, .navbar-inverse .navbar-nav>li>a:focus { background: #fff; outline: none;}
.header-style .header-options { margin: 5px 0 0 0; }
.header-style .header-options.navbar-nav>li>a{ cursor: default; color: #262626; }
.header-style .header-options.navbar-nav>li>a:hover { background: transparent; color: #262626}
.header-style .header-options .icon-notification img, .header-options .icon-config img{ opacity: 0.4}
.header-style .header-options .icon-notification:hover img, .header-options .icon-config:hover img{ opacity: 1 }
.header-style .header-options .icon-notification .title { margin: 10px 0 10px 40px;}
.header-style .header-options .badge { position: absolute; bottom: 27px; right: 3px; background: #f03f24; opacity: 1; border-radius: 20px;}
.header-style .header-options li.separator { border-right: 2px solid #D5D5D5 }
.header-options .icon-config { display: block; }
.header-options .settings { display: none; }
.side-nav>li.dropdown>ul.dropdown-menu>li>a:hover, .side-nav>li.dropdown>ul.dropdown-menu>li>a.active, .side-nav>li.dropdown>ul.dropdown-menu>li>a:focus { background: #fff; border-left: 6px solid #06963b; color: #262626 }
@media (max-width: 767px) {
    .navbar-inverse .navbar-nav .open .dropdown-menu>li>a:hover, .navbar-inverse .navbar-nav .open .dropdown-menu>li>a:focus { color: #333 }
    .header-style .navbar-nav>li>a{ cursor: default; color: #262626; border: 0 }
    .header-style .navbar-nav>li>a:hover { background: transparent; color: #262626}
    .header-style .icon-notification-mobile a:hover { cursor: default; border: 0}
    .header-style .icon-notification-mobile img, .header-options .icon-config img{ opacity: 0.4}
    .header-style .icon-notification-mobile:hover img, .header-options .icon-config:hover img{ opacity: 1; }
    .header-style .icon-notification-mobile .title { margin: 10px 0 10px 40px;}
    .header-style .badge { position: absolute; bottom: 27px; right: 3px; background: #f03f24; opacity: 1; border-radius: 20px;}
    .header-style .logo-mobile { display: block; margin: 3px 40%; position: absolute; float: left; }
    .header-style .logo { display: none; }
    .header-style .opened { position: static; float: none; width: auto; margin-top: 0; background-color: transparent; border: 0; box-shadow: none; display: block;}
    .header-style .opened li { margin: 2px 0}
    .header-style .icon-notification-mobile { float: right; display: block; position: relative; top: 22px;}
    .dropdown-menu>li>a { color: #999 }
    .header-style .title { display: none }
    .header-style .logo { position: relative; left: 20%;}
    .badge { position: relative!important; top: -8px!important; right: 13px!important; }
    .header-style .header-options li.separator {  border-right: 0}
    .header-style .icon-notification { display: none}
    .navbar-inverse .navbar-collapse, .navbar-inverse .navbar-form { border: 0 }
    #sidebar { border: 1px solid #d9d9d9}
    .header-options .icon-config { display: none; }
    .header-options .settings { display: block; }
}



